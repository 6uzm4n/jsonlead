{
  "$id": "https://raw.githubusercontent.com/JSONLead/jsonlead/master/schemas/jsonlead_v2.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JsonLead",
  "type": "object",
  "required": [
    "client",
    "version"
  ],
  "definitions": {
    "sale": {
      "type": "object",
      "title": "Sale lead",
      "properties": {
        "assigned_to": {
          "type": "string",
          "description": "The user assigned to the sale"
        },
        "state": {
          "type": "string",
          "description": "The appraisal state"
        },
        "car": {
          "description": "The car associated with this sale",
          "$ref": "#/definitions/car"
        },
        "inquiry": {
          "type": "string",
          "description": "The sale inquiry"
        },
        "foreign_id": {
          "type": "string",
          "description": "A unique identifier for the sale"
        },
        "origin": {
          "description": "The car associated with this sale",
          "$ref": "#/definitions/origin"
        },
        "location": {
          "type": "string",
          "description": "The location of the sale"
        },
        "task": {
          "description": "A task object to associate with the sale",
          "$ref": "#/definitions/task"
        },
        "appointment": {
          "description": "An appointment object to associate with the sale",
          "$ref": "#/definitions/appointment"
        },
        "comment": {
          "description": "A comment object to associate with the sale",
          "$ref": "#/definitions/comment"
        },
        "custom": {
          "type": "object",
          "description": "Custom fields for the sale"
        }
      }
    },
    "appraisal": {
      "type": "object",
      "title": "Appraisal lead",
      "properties": {
        "assigned_to": {
          "type": "string",
          "description": "The username assigned to the appraisal"
        },
        "state": {
          "type": "string",
          "description": "The appraisal state"
        },
        "car": {
          "description": "The car associated with this appraisal",
          "$ref": "#/definitions/car"
        },
        "appraisal_value": {
          "type": "number",
          "description": "The appraised value for the car"
        },
        "origin": {
          "description": "The car associated with this appraisal",
          "$ref": "#/definitions/origin"
        },
        "location": {
          "type": "string",
          "description": "The location of the appraisal"
        },
        "task": {
          "description": "A task object to associate with the appraisal",
          "$ref": "#/definitions/task"
        },
        "appointment": {
          "description": "An appointment object to associate with the appraisal",
          "$ref": "#/definitions/appointment"
        },
        "foreign_id": {
          "type": "string",
          "description": "A unique identifier for the appraisal"
        },
        "comment": {
          "description": "A comment object to associate with the appraisal",
          "$ref": "#/definitions/comment"
        },
        "custom": {
          "type": "object",
          "description": "Custom fields for the appraisal"
        }
      }
    },
    "car": {
      "title": "Car",
      "type": "object",
      "properties": {
        "make": {
          "type": "string",
          "description": "Make"
        },
        "model": {
          "type": "string",
          "description": "Model"
        },
        "price": {
          "type": "number",
          "description": "Price"
        },
        "version": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "new",
            "used"
          ],
          "description": "Type"
        },
        "license_plate": {
          "type": "string",
          "description": "License place"
        },
        "mileage": {
          "type": "number",
          "minimum": 0,
          "description": "Mileage"
        },
        "doors": {
          "type": "number",
          "minimum": 0,
          "description": "Number of doors"
        },
        "year": {
          "type": "number",
          "minimum": 0,
          "description": "Fabrication year"
        },
        "month": {
          "type": "number",
          "minimum": 0,
          "description": "Fabrication month"
        },
        "warraty_months": {
          "type": "number",
          "minimum": 0,
          "description": "Duration of the warranty in months"
        },
        "vin": {
          "type": "string",
          "description": "Vehicle Identification Number"
        },
        "fuel": {
          "type": "string",
          "description": "Fuel Type"
        },
        "transmission": {
          "type": "string",
          "description": "Transmission Type"
        },
        "power": {
          "type": "number",
          "minimum": 0,
          "description": "Horsepower"
        },
        "body_style": {
          "type": "string",
          "description": "Body type"
        },
        "color": {
          "type": "string",
          "description": "Color"
        },
        "url": {
          "type": "string",
          "description": "Car publication URL",
          "format": "uri"
        },
        "engine_size": {
          "type": "number",
          "description": "Engine volume (cc3)"
        },
        "extras": {
          "type": "string",
          "description": "Extras"
        },
        "history": {
          "type": "string",
          "description": "History"
        }
      }
    },
    "origin": {
      "title": "Origin",
      "type": "object",
      "properties": {
        "source": {
          "type": "string",
          "description": "The source of the lead"
        },
        "medium": {
          "type": "string",
          "description": "The medium of the lead"
        },
        "campaign": {
          "type": "string",
          "description": "The campaign of the lead"
        }
      }
    },
    "task": {
      "title": "Task",
      "type": "object",
      "properties": {
        "date": {
          "type": "string",
          "format": "date-time",
          "description": "The due date of the task"
        },
        "username": {
          "type": "string",
          "description": "The user assigned to this task"
        },
        "description": {
          "type": "string",
          "description": "The task description"
        },
        "custom": {
          "type": "object",
          "description": "Custom fields for the task"
        }
      }
    },
    "appointment": {
      "title": "Appointment",
      "type": "object",
      "properties": {
        "date": {
          "type": "string",
          "format": "date-time",
          "description": "The date of the appointment"
        },
        "username": {
          "type": "string",
          "description": "The user assigned to the appointment"
        },
        "custom": {
          "type": "object",
          "description": "Custom fields for the appointment"
        }
      }
    },
    "comment": {
      "type": "string",
      "description": "The comment contents"
    }
  },
  "properties": {
    "version": {
      "type": "string",
      "description": "Version of the JSONLead schema",
      "const": "1.0.0"
    },
    "client": {
      "type": "object",
      "title": "Client",
      "properties": {
        "foreign_id": {
          "type": "string",
          "description": "A unique identifier for the client"
        },
        "first_name": {
          "type": "string",
          "description": "The first name of the client"
        },
        "last_name": {
          "type": "string",
          "description": "The last name of the client"
        },
        "province": {
          "type": "string",
          "description": "The province of the client"
        },
        "postal_code": {
          "type": "string",
          "description": "The postal code of the client"
        },        
        "phone": {
          "type": "string",
          "description": "The phone number of the client (E.164)"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The email of the client"
        },
        "custom": {
          "type": "object",
          "description": "Custom fields for the client"
        }
      },
      "description": "The client object"
    },
    "appraisal": {
      "type": "object",
      "$ref": "#/definitions/appraisal"
    },
    "sale": {
      "type": "object",
      "$ref": "#/definitions/sale",
      "description": "The salelead."
    }
  }
}
